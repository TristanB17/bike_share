<div class="container">
  <section class="hero is-small is-primary is-bold">
    <div class="hero-body">
      <div class="container">
        <h1 class="title is-size-1 has-text-centered has-text-weight-bold">Conditions</h1>
      </div>
    </div>
  </section>
  <br>
  <br>
  <div>
    <div class="box">
      <%= will_paginate %>
    </div>
    <br>
    <table class="table is-bordered is-striped">
      <thead>
        <th>Date</th>
        <th>Max. Temperature (f)</th>
        <th>Avg. Temperature (f)</th>
        <th>Min. Temperature (f)</th>
        <th>Avg. Humidity</th>
        <th>Avg. Visibility (Miles)</th>
        <th>Avg. Wind Speed (Mph)</th>
        <th>Precipitation (Inches)</th>
        <th>Zip Code</th>
      </thead>

      <tbody>
        <% @conditions.each do |condition| %>
          <tr>
            <td>
              <%= link_to condition.date, condition_path(condition) %>
            </td>
            <td>
              <%= condition.max_temperature_f %>
            </td>
            <td>
              <%= condition.mean_temperature_f %>
            </td>
            <td>
              <%= condition.min_temperature_f %>
            </td>
            <td>
              <%= condition.mean_humidity %>
            </td>
            <td>
              <%= condition.mean_visibility_miles %>
            </td>
            <td>
              <%= condition.mean_wind_speed_mph %>
            </td>
            <td>
              <%= condition.precipitation_inches%>
            </td>
            <td>
              <%= condition.zip_code%>
            </td>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>
